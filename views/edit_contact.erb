<div class="edit">

  <h1>Edit Contact</h1>

  <form action='/contacts/<%= @contacts.id %>' method='post'>

    <input type='hidden' name='_method' value='put'>

    <div class="input_section">
      <label for='first_name'>
        <span class="input_field">First Name:</span>
        <input class="input_form" type='text' name='first_name' value='<%= @contacts.first_name %>'>
      </label>
    </div>

    <div class="input_section">
      <label for='last_name'>
        <span class="input_field">Last Name:</span>
        <input class="input_form" type='text' name='last_name' value='<%= @contacts.last_name %>'>
      </label>
    </div>

    <div class="input_section">
      <label for='email'>
        <span class="input_field">Email:</span>
        <input class="input_form" type='text' name='email' value='<%= @contacts.email %>'>
      </label>
    </div>

    <div class="input_section">
      <label for='note'>
        <span class="input_field">Note:</span>
        <input class="input_note" type='text' name='note' value='<%= @contacts.note %>'>
      </label>
    </div>

    <input type='submit' value='Edit Contact'>
  </form>

  <div class="return">
    <p><a href="/contacts">Back to contact list</a></p>
    <br>
  </div>

</div>
